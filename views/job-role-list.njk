{% extends "layout.njk" %}

{% block content %}
    <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8 mt-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-bold text-gray-800">Current vacancies</h2>
            
            <!-- Server-side auth check - only show for Admin users -->
            {% if user and user.userRole == UserRole.ADMIN %}
            <div id="adminActions">
                <a href="/add-role" 
                   class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    + Add New Job Role
                </a>
            </div>
            {% endif %}
        </div>

        {% if jobRoles and jobRoles.length > 0 %}
            <div class="grid gap-4">
                {% for role in jobRoles %}
                    <a href="/job-roles/{{ role.jobRoleId }}" 
                       class="block p-4 border border-gray-200 rounded-lg hover:shadow-lg transition-shadow">
                        <div class="flex justify-between items-start">
                            <h3 class="text-xl font-semibold text-gray-800">{{ role.roleName }}</h3>
                            <span class="text-xl font-bold text-gray-800">{{ role.closingDate }}</span>
                        </div>
                        <p class="text-gray-600 mt-2">{{ role.description }}</p>
                        <div class="mt-3 flex gap-4 text-sm text-gray-500">
                            <span>Band: {{ role.band }}</span>
                            <span>Capability: {{ role.capability }}</span>
                            <span>Location: {{ role.location }}</span>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-600">No job roles available at this time.</p>
            <table class="w-full border-collapse border border-gray-300">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="border border-gray-300 px-4 py-2 text-left">Role Name</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Location</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Capability</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Band</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Closing Date</th>
                        {% if canDelete %}
                            <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for role in jobRoles %}
                        <tr class="hover:bg-gray-50">
                            <td class="border border-gray-300 px-4 py-2">
                                <a href="/job-roles/{{ role.jobRoleId }}" class="text-blue-700 underline hover:text-blue-900">
                                    {{ role.roleName }}
                                </a>
                            </td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.location }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.capability }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.band }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.formattedClosingDate }}</td>
                            {% if canDelete %}
                                <td class="border border-gray-300 px-4 py-2">
                                    <a
                                        href="/job-roles/{{ role.jobRoleId }}/confirm-delete"
                                        class="text-red-700 underline hover:text-red-900"
                                    >
                                        Delete
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}