{% extends "layout.njk" %}

{% block content %}
  <div class="max-w-4xl mx-auto mt-8 mb-12">
    <!-- Header -->
    <div class="bg-white shadow-md rounded-t-lg border-b-4 border-blue-600 p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-3">{{ jobRole.roleName }}</h1>
      <div class="flex items-center gap-3 text-sm text-gray-600">
        <span class="bg-gray-100 px-3 py-1 rounded">{{ jobRole.capability }}</span>
        <span class="bg-gray-100 px-3 py-1 rounded">{{ jobRole.band }}</span>
      </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white shadow-md rounded-b-lg p-8">
      <!-- Key Information Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="border border-gray-200 rounded-lg p-4">
          <label class="block text-sm font-semibold text-gray-600 mb-1">Location</label>
          <div class="text-gray-900">{{ jobRole.location }}</div>
        </div>
        <div class="border border-gray-200 rounded-lg p-4">
          <label class="block text-sm font-semibold text-gray-600 mb-1">Closing Date</label>
          <div class="text-gray-900">{{ formattedClosingDate }}</div>
        </div>
        <div class="border border-gray-200 rounded-lg p-4">
          <label class="block text-sm font-semibold text-gray-600 mb-1">Open Positions</label>
          <div class="text-gray-900">{{ jobRole.openPositions }}</div>
        </div>
      </div>

      <!-- Status -->
      <div class="mb-6 flex items-center gap-2">
        <span class="text-sm font-semibold text-gray-600">Status:</span>
        <span class="px-3 py-1 rounded text-sm font-medium {% if jobRole.status == 'Open' %}bg-green-100 text-green-800{% else %}bg-gray-200 text-gray-700{% endif %}">
          {{ jobRole.status }}
        </span>
      </div>

      <!-- Divider -->
      <div class="border-t border-gray-200 my-6"></div>

      <!-- Description Section -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-2">Description</h2>
        <div class="bg-gray-50 rounded-lg p-4 text-gray-700 leading-relaxed">
          {{ jobRole.description }}
        </div>
      </div>

      <!-- Responsibilities Section -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-2">Responsibilities</h2>
        <div class="bg-gray-50 rounded-lg p-4 text-gray-700 leading-relaxed whitespace-pre-line">
          {{ jobRole.responsibilities }}
        </div>
      </div>

      <!-- Job Spec Link -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-2">Job Specification</h2>
        <a href="{{ jobRole.jobSpecLink }}" target="_blank" rel="noopener" 
           class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded font-medium transition-colors">
          View Full Job Specification
        </a>
      </div>
      <div class="flex justify-center mt-8">
        {% if not isAuthenticated %}
          <div class="text-gray-500 px-6 py-2">
            <a href="/login" class="text-blue-700 underline">Sign in</a> to apply
          </div>
        {% elif jobStatusMessage %}
          <div class="text-gray-600 px-6 py-2">{{ jobStatusMessage }}</div>
        {% elif applicationStatus.hasApplied %}
          <div class="bg-gray-100 text-gray-600 px-6 py-2 rounded">
            ✓ Already Applied
          </div>
        {% else %}
          <a href="/job-roles/{{ jobRole.jobRoleId }}/apply" class="bg-blue-700 text-white px-6 py-2 rounded hover:bg-blue-800 font-semibold">
            Apply Now
          </a>
        {% endif %}
      </div>
        {% if canDelete %}
        <div class="flex justify-center mt-4">
          <a
            href="/job-roles/{{ jobRole.jobRoleId }}/confirm-delete"
            class="text-red-700 underline hover:text-red-900"
          >
          Delete role
          </a>
        </div>
        {% endif %}

      <!-- Divider -->
      <div class="border-t border-gray-200 my-6"></div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
        <a href="/job-roles" 
           class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded font-medium transition-colors">
          ← Back to Job Roles
        </a>

        <div class="px-6 py-2">
          {{ jobStatusMessage | safe }}
        </div>
      </div>
    </div>
  </div>
  <script src="/js/job-application.js"></script>
{% endblock %}