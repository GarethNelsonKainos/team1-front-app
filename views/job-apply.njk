{% extends "layout.njk" %}

{% block content %}
    <div class="bg-white rounded-lg shadow-md p-6 max-w-md mx-auto">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Apply for {{ roleName }}</h2>
        
        <form action="/api/applications" method="POST" class="space-y-4">
            <input type="hidden" name="jobRoleId" value="{{ jobRoleId }}">
            
            <div>
                <p class="text-gray-700 font-medium mb-2">Upload CV</p>
                <div class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50">
                    <p class="text-gray-600">CV upload functionality will be available soon.</p>
                    <p class="text-sm text-gray-500 mt-1">For now, you can submit your application and upload your CV later.</p>
                </div>
            </div>
            
            <div class="flex space-x-4">
                <a href="/job-roles/{{ jobRoleId }}" 
                   class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition-colors">
                    Cancel
                </a>
                <button type="submit" 
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition-colors">
                    Submit Application
                </button>
            </div>
        </form>
    </div>
{% endblock %}