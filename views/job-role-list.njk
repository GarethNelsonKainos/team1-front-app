{% extends "layout.njk" %}

{% block content %}
    <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8 mt-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Available Job Roles</h2>
        
        {% if jobRoles | length == 0 %}
            <p class="text-gray-600">No job roles are currently available.</p>
        {% else %}
            <table class="w-full border-collapse border border-gray-300">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="border border-gray-300 px-4 py-2 text-left">Role Name</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Location</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Capability</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Band</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Closing Date</th>
                        {% if canDelete %}
                            <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for role in jobRoles %}
                        <tr class="hover:bg-gray-50">
                            <td class="border border-gray-300 px-4 py-2">
                                <a href="/job-roles/{{ role.jobRoleId }}" class="text-blue-700 underline hover:text-blue-900">
                                    {{ role.roleName }}
                                </a>
                            </td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.location }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.capability }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.band }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.formattedClosingDate }}</td>
                            {% if canDelete %}
                                <td class="border border-gray-300 px-4 py-2">
                                    <button
                                        type="button"
                                        class="text-red-700 underline hover:text-red-900"
                                        onclick="confirmDelete({{ role.jobRoleId }})"
                                    >
                                        Delete
                                    </button>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
        <script>
            function confirmDelete(id) {
                if (confirm('Are you sure you want to delete this role?')) {
                    fetch(`/job-roles/${id}/delete`, {
                        method: 'POST',
                        headers: {
                            'CSRF-Token': '{{ csrfToken }}'
                        }
                    })
                    .then(res => {
                        if (res.ok) window.location.reload();
                        else alert('Failed to delete role');
                    });
                }
            }
        </script>
{% endblock %}
