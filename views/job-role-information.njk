{% extends "layout.njk" %}

{% block content %}
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8 mt-8">
    <h1 class="text-2xl font-bold mb-6 text-center">{{ jobRole.roleName }}</h1>
    <form class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block font-semibold">Location</label>
          <div class="bg-gray-100 rounded px-3 py-2">{{ jobRole.location }}</div>
        </div>
        <div>
          <label class="block font-semibold">Closing Date</label>
          <div class="bg-gray-100 rounded px-3 py-2">{{ formattedClosingDate }}</div>
        </div>
        <div>
          <label class="block font-semibold">Capability</label>
          <div class="bg-gray-100 rounded px-3 py-2">{{ jobRole.capability }}</div>
        </div>
        <div>
          <label class="block font-semibold">Band</label>
          <div class="bg-gray-100 rounded px-3 py-2">{{ jobRole.band }}</div>
        </div>
        <div>
          <label class="block font-semibold">Status</label>
          <div class="bg-gray-100 rounded px-3 py-2">{{ jobRole.status }}</div>
        </div>
        <div>
          <label class="block font-semibold">Openings</label>
          <div class="bg-gray-100 rounded px-3 py-2">{{ jobRole.openPositions }}</div>
        </div>
      </div>
      <div>
        <label class="block font-semibold">Description</label>
        <div class="bg-gray-100 rounded px-3 py-2">{{ jobRole.description }}</div>
      </div>
      <div>
        <label class="block font-semibold">Responsibilities</label>
        <div class="bg-gray-100 rounded px-3 py-2 whitespace-pre-line">{{ jobRole.responsibilities }}</div>
      </div>
      <div>
        <label class="block font-semibold">Job Spec</label>
        <a href="{{ jobRole.jobSpecLink }}" target="_blank" rel="noopener" class="text-blue-700 underline">
          View Job Spec
        </a>
      </div>
    </form>
    <div class="flex justify-center mt-8 space-x-4">
      <a href="/job-roles" 
         class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded font-semibold transition-colors">
        Back to Job Roles
      </a>
      
      {% if isJobApplicationsEnabled and jobRole.status === "Open" and jobRole.openPositions > 0 %}
        <!-- Apply button container - will be updated by JavaScript -->
        <div id="applyButtonContainer">
          <div class="text-gray-500 px-6 py-2">
            Loading application status...
          </div>
        </div>
      {% elif not isJobApplicationsEnabled %}
        <div class="text-gray-500 px-6 py-2">
          Job applications are currently unavailable
        </div>
      {% elif jobRole.status !== "Open" or jobRole.openPositions <= 0 %}
        <div class="text-gray-500 px-6 py-2">
          This position is no longer available
        </div>
      {% endif %}
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const applyButtonContainer = document.getElementById('applyButtonContainer');
      
      if (!applyButtonContainer) return;

      const jobRoleId = {{ jobRole.jobRoleId }};
      const token = sessionStorage.getItem('authToken');

      if (!token) {
        applyButtonContainer.innerHTML = `
          <div class="text-gray-500 px-6 py-2">
            <a href="/login" class="text-blue-700 underline">Sign in</a> to apply
          </div>
        `;
        return;
      }

      // Check if user already applied
      fetch(`http://localhost:3001/api/applications/status/${jobRoleId}`, {
        headers: { 'Authorization': `Bearer ${token}` }
      })
      .then(r => r.json())
      .then(data => {
        if (data.hasApplied) {
          applyButtonContainer.innerHTML = `
            <div class="bg-gray-100 text-gray-600 px-6 py-2 rounded">
              âœ“ Already Applied
            </div>
          `;
        } else {
          applyButtonContainer.innerHTML = `
            <a href="/job-roles/${jobRoleId}/apply" class="bg-blue-700 text-white px-6 py-2 rounded hover:bg-blue-800 font-semibold">
              Apply Now
            </a>
          `;
        }
      })
      .catch(() => {
        // Show apply button on error
        applyButtonContainer.innerHTML = `
          <a href="/job-roles/${jobRoleId}/apply" class="bg-blue-700 text-white px-6 py-2 rounded hover:bg-blue-800 font-semibold">
            Apply Now
          </a>
        `;
      });
    });
  </script>
{% endblock %}