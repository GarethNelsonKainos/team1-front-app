{% extends "layout.njk" %}

{% block content %}
<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold mb-6" style="color: var(--brand-primary);">Add New Job Role</h1>
    
    <form id="addJobRoleForm" class="space-y-6">
        <!-- Job Role Name -->
        <div>
            <label for="roleName" class="block text-sm font-medium text-gray-700 mb-2">
                Job Role Name <span class="text-red-500">*</span>
            </label>
            <input 
                type="text" 
                id="roleName" 
                name="roleName" 
                required
                maxlength="100"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="e.g. Software Engineer"
            >
            <span class="error-message text-red-500 text-sm hidden" id="roleNameError"></span>
        </div>

        <!-- Capability Dropdown -->
        <div>
            <label for="capability" class="block text-sm font-medium text-gray-700 mb-2">
                Capability <span class="text-red-500">*</span>
            </label>
            <select 
                id="capability" 
                name="capabilityId" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
                <option value="">-- Select Capability --</option>
            </select>
            <span class="error-message text-red-500 text-sm hidden" id="capabilityError"></span>
        </div>

        <!-- Band Dropdown -->
        <div>
            <label for="band" class="block text-sm font-medium text-gray-700 mb-2">
                Band <span class="text-red-500">*</span>
            </label>
            <select 
                id="band" 
                name="bandId" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
                <option value="">-- Select Band --</option>
            </select>
            <span class="error-message text-red-500 text-sm hidden" id="bandError"></span>
        </div>

        <!-- Description -->
        <div>
            <label for="jobSpecSummary" class="block text-sm font-medium text-gray-700 mb-2">
                Job Spec Summary <span class="text-red-500">*</span>
            </label>
            <textarea 
                id="jobSpecSummary" 
                name="jobSpecSummary" 
                required
                rows="4"
                maxlength="500"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Brief summary of the role..."
            ></textarea>
            <span class="text-sm text-gray-500" id="summaryCount">0/500</span>
            <span class="error-message text-red-500 text-sm hidden block" id="jobSpecSummaryError"></span>
        </div>

        <!-- SharePoint Link -->
        <div>
            <label for="jobSpecLink" class="block text-sm font-medium text-gray-700 mb-2">
                Job Specification Link <span class="text-red-500">*</span>
            </label>
            <input 
                type="url" 
                id="jobSpecLink" 
                name="jobSpecLink" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="https://sharepoint.com/..."
            >
            <span class="error-message text-red-500 text-sm hidden" id="jobSpecLinkError"></span>
        </div>

        <!-- Responsibilities -->
        <div>
            <label for="responsibilities" class="block text-sm font-medium text-gray-700 mb-2">
                Responsibilities <span class="text-red-500">*</span>
            </label>
            <textarea 
                id="responsibilities" 
                name="responsibilities" 
                required
                rows="6"
                maxlength="1000"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="List key responsibilities..."
            ></textarea>
            <span class="text-sm text-gray-500" id="responsibilitiesCount">0/1000</span>
            <span class="error-message text-red-500 text-sm hidden block" id="responsibilitiesError"></span>
        </div>

        <!-- Number of Open Positions -->
        <div>
            <label for="openPositions" class="block text-sm font-medium text-gray-700 mb-2">
                Number of Open Positions <span class="text-red-500">*</span>
            </label>
            <input 
                type="number" 
                id="openPositions" 
                name="openPositions" 
                required
                min="1"
                max="100"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="1"
            >
            <span class="error-message text-red-500 text-sm hidden" id="openPositionsError"></span>
        </div>

        <!-- Location (Multiselect) -->
        <div>
            <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
                Location(s) <span class="text-red-500">*</span>
            </label>
            <div class="relative">
                <select 
                    id="location" 
                    name="location" 
                    multiple
                    size="5"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
                    <!-- Options loaded from backend -->
                </select>
                <p class="text-sm text-gray-500 mt-1">Hold Ctrl (Cmd on Mac) to select multiple locations</p>
            </div>
            <div id="selectedLocations" class="mt-2 flex flex-wrap gap-2"></div>
            <span class="error-message text-red-500 text-sm hidden block" id="locationError"></span>
        </div>

        <!-- Closing Date -->
        <div>
            <label for="closingDate" class="block text-sm font-medium text-gray-700 mb-2">
                Closing Date <span class="text-red-500">*</span>
            </label>
            <input 
                type="date" 
                id="closingDate" 
                name="closingDate" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
            <span class="error-message text-red-500 text-sm hidden" id="closingDateError"></span>
        </div>

        <!-- Error/Success Messages -->
        <div id="formMessage" class="hidden p-4 rounded-md"></div>

        <!-- Action Buttons -->
        <div class="flex gap-4 pt-4">
            <button 
                type="submit" 
                class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
                Add Job Role
            </button>
            <a 
                href="/job-roles" 
                class="px-6 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
            >
                Cancel
            </a>
        </div>
    </form>
</div>

<script src="/js/add-job-role.js"></script>
{% endblock %}