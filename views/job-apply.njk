{% extends "layout.njk" %}

{% block content %}
<div class="container mx-auto max-w-md mt-8 p-6 bg-white rounded shadow">
    <h2 class="text-2xl mb-4">Apply for {{ roleName }}</h2>
    
    <form action="/job-roles/{{ jobRoleId }}/apply" method="post" class="space-y-4">
        <div>
            <label class="block mb-2">CV Upload (Coming Soon)</label>
            <p class="text-gray-600 text-sm">CV upload will be available soon. Submit now and upload later.</p>
        </div>
        
        <div class="flex gap-4">
            <a href="/job-roles/{{ jobRoleId }}" class="btn-secondary">Cancel</a>
            <button type="submit" class="btn-primary">Submit Application</button>
        </div>
    </form>
</div>
{% endblock %}