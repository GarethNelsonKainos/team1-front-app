{% extends "layout.njk" %}

{% block content %}
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Available Job Roles</h2>
        
        {% if jobRoles | length == 0 %}
            <p class="text-gray-600">No job roles are currently available.</p>
        {% else %}
            <table class="w-full border-collapse border border-gray-300">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="border border-gray-300 px-4 py-2 text-left">Role Name</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Location</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Capability</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Band</th>
                        <th class="border border-gray-300 px-4 py-2 text-left">Closing Date</th>
                        {% if canDelete %}
                            <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for role in jobRoles %}
                        <tr class="hover:bg-gray-50">
                            <td class="border border-gray-300 px-4 py-2">
                                <a href="/job-roles/{{ role.jobRoleId }}" class="text-blue-700 underline hover:text-blue-900">
                                    {{ role.roleName }}
                                </a>
                            </td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.location }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.capability }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.band }}</td>
                            <td class="border border-gray-300 px-4 py-2">{{ role.formattedClosingDate }}</td>
                            {% if canDelete %}
                                <td class="border border-gray-300 px-4 py-2">
                                    <button
                                        type="button"
                                        class="text-red-700 underline hover:text-red-900"
                                        data-delete-role
                                        data-role-id="{{ role.jobRoleId }}"
                                    >
                                        Delete
                                    </button>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('[data-delete-role]');
            const apiBaseUrl = '{{ apiBaseUrl }}';

            async function deleteRole(roleId) {
                const confirmed = window.confirm('Are you sure you want to delete this role?');
                if (!confirmed) {
                    return;
                }

                const token = sessionStorage.getItem('authToken');
                const headers = token ? { Authorization: `Bearer ${token}` } : {};

                try {
                    const response = await fetch(`${apiBaseUrl}/api/job-roles/${roleId}`, {
                        method: 'DELETE',
                        headers,
                    });

                    if (!response.ok) {
                        throw new Error('Delete failed');
                    }

                    window.location.reload();
                } catch (error) {
                    console.error('Error deleting job role:', error);
                    window.alert('Unable to delete role. Please try again.');
                }
            }

            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const roleId = this.getAttribute('data-role-id');
                    if (roleId) {
                        deleteRole(roleId);
                    }
                });
            });
        });
    </script>
{% endblock %}
