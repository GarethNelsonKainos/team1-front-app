{% extends "layout.njk" %}

{% block content %}
    <div class="bg-white rounded-lg shadow-md p-6 max-w-md mx-auto">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Apply for {{ roleName }}</h2>
        
        <!-- Error message container -->
        <div id="errorMessage" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <span id="errorText"></span>
        </div>
        
        <form id="applicationForm" class="space-y-4">
            <input type="hidden" name="jobRoleId" value="{{ jobRoleId }}">
            
            <div>
                <p class="text-gray-700 font-medium mb-2">Upload CV</p>
                <div class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50">
                    <p class="text-gray-600">CV upload functionality will be available soon.</p>
                    <p class="text-sm text-gray-500 mt-1">For now, you can submit your application and upload your CV later.</p>
                </div>
            </div>
            
            <div class="flex space-x-4">
                <a href="/job-roles/{{ jobRoleId }}" 
                   class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition-colors">
                    Cancel
                </a>
                <button type="submit" 
                        id="submitButton"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition-colors">
                    Submit Application
                </button>
            </div>
        </form>
        
        <!-- Loading state -->
        <div id="loadingState" class="hidden text-center mt-4">
            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
            <span class="ml-2 text-blue-600">Submitting application...</span>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const applicationForm = document.getElementById('applicationForm');
            const submitButton = document.getElementById('submitButton');
            const loadingState = document.getElementById('loadingState');
            const errorMessage = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');

            // Check if user is logged in
            const authToken = sessionStorage.getItem('authToken');
            if (!authToken) {
                window.location.href = '/login';
                return;
            }

            // Show error function
            function showError(message) {
                errorText.textContent = message;
                errorMessage.classList.remove('hidden');
            }

            applicationForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                // Hide any existing errors
                errorMessage.classList.add('hidden');
                
                // Show loading state
                submitButton.disabled = true;
                applicationForm.classList.add('hidden');
                loadingState.classList.remove('hidden');

                try {
                    const jobRoleId = document.querySelector('input[name="jobRoleId"]').value;
                    
                    const response = await fetch('/api/applications', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'Authorization': `Bearer ${authToken}`
                        },
                        body: `jobRoleId=${jobRoleId}`
                    });

                    if (response.ok) {
                        // Redirect will be handled by the server response
                        window.location.href = '/application-success';
                    } else {
                        if (response.status === 401) {
                            // Token might be expired, redirect to login
                            sessionStorage.removeItem('authToken');
                            sessionStorage.removeItem('userEmail');
                            window.location.href = '/login';
                        } else {
                            const errorData = await response.text();
                            showError('Failed to submit application. Please try again.');
                        }
                    }
                } catch (error) {
                    console.error('Error submitting application:', error);
                    showError('Network error. Please check your connection and try again.');
                } finally {
                    // Hide loading state
                    submitButton.disabled = false;
                    applicationForm.classList.remove('hidden');
                    loadingState.classList.add('hidden');
                }
            });
        });
    </script>
{% endblock %}