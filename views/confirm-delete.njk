{% extends "layout.njk" %}

{% block content %}
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8 mt-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-red-700">Confirm Delete</h1>
    
    <!-- Warning Message -->
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
      <p class="font-semibold">⚠️ Warning</p>
      <p>Are you sure you want to delete this role? This action cannot be undone.</p>
    </div>

    <!-- Job Role Details -->
    <div class="bg-gray-50 rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Role Details</h2>
      <div class="space-y-2">
        <div>
          <span class="font-semibold">Role Name:</span> {{ jobRole.roleName }}
        </div>
        <div>
          <span class="font-semibold">Location:</span> {{ jobRole.location }}
        </div>
        <div>
          <span class="font-semibold">Capability:</span> {{ jobRole.capability }}
        </div>
        <div>
          <span class="font-semibold">Band:</span> {{ jobRole.band }}
        </div>
        <div>
          <span class="font-semibold">Closing Date:</span> {{ formattedClosingDate }}
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-center space-x-4">
      <a 
        href="/job-roles" 
        class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded font-semibold transition-colors"
      >
        Cancel
      </a>
      
      <form method="POST" action="/job-roles/{{ jobRole.jobRoleId }}/delete" class="inline">
        <button 
          type="submit" 
          class="bg-red-700 hover:bg-red-800 text-white px-6 py-3 rounded font-semibold transition-colors"
        >
          Confirm Delete
        </button>
      </form>
    </div>
  </div>
{% endblock %}