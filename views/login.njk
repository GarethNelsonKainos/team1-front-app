{% extends "layout.njk" %}

{% block content %}
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8 mt-8">
        <h1 class="text-3xl font-bold mb-8 text-center" style="color: var(--brand-primary);">Sign In</h1>
        
        <!-- Client-side error message container -->
        <div id="errorMessage" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <span id="errorText"></span>
        </div>
        
        <!-- Success message container -->
        <div id="successMessage" class="hidden bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            <span id="successText">Login successful! Redirecting...</span>
        </div>

        <form id="loginForm" class="space-y-6">
            <div>
                <label for="email" class="block text-sm font-semibold mb-2" style="color: var(--brand-primary);">Email Address</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-opacity-50" 
                    style="border-color: var(--brand-primary); focus:ring-color: var(--brand-primary);"
                    placeholder="Enter your email address"
                >
                <div id="emailError" class="text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <div>
                <label for="password" class="block text-sm font-semibold mb-2" style="color: var(--brand-primary);">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-opacity-50" 
                    style="border-color: var(--brand-primary); focus:ring-color: var(--brand-primary);"
                    placeholder="Enter your password"
                >
                <div id="passwordError" class="text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <button 
                type="submit" 
                id="loginButton" 
                class="w-full py-3 px-4 rounded-lg text-white font-semibold hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-opacity-50" 
                style="background-color: var(--brand-primary); focus:ring-color: var(--brand-primary);"
            >
                Sign In
            </button>
        </form>
        
        <!-- Loading state -->
        <div id="loadingState" class="hidden text-center mt-4">
            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2" style="border-color: var(--brand-primary);"></div>
            <span class="ml-2" style="color: var(--brand-primary);">Signing you in...</span>
        </div>
        
        <div class="mt-6 text-center">
            <a href="/" class="text-sm hover:underline" style="color: var(--brand-primary);">
                ‚Üê Back to Job Listings
            </a>
        </div>
    </div>

    <script>
        // Login form handling
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            const loginButton = document.getElementById('loginButton');
            const loadingState = document.getElementById('loadingState');
            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');
            const errorText = document.getElementById('errorText');
            const emailError = document.getElementById('emailError');
            const passwordError = document.getElementById('passwordError');

            // Hide messages function
            function hideMessages() {
                errorMessage.classList.add('hidden');
                successMessage.classList.add('hidden');
                emailError.classList.add('hidden');
                passwordError.classList.add('hidden');
            }

            // Show error function
            function showError(message) {
                hideMessages();
                errorText.textContent = message;
                errorMessage.classList.remove('hidden');
            }

            // Show field error function
            function showFieldError(field, message) {
                const errorElement = field === 'email' ? emailError : passwordError;
                errorElement.textContent = message;
                errorElement.classList.remove('hidden');
            }

            // Validate email format
            function isValidEmail(email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }

            // Form validation
            function validateForm(email, password) {
                let isValid = true;
                hideMessages();

                if (!email.trim()) {
                    showFieldError('email', 'Email is required');
                    isValid = false;
                } else if (!isValidEmail(email)) {
                    showFieldError('email', 'Please enter a valid email address');
                    isValid = false;
                }

                if (!password.trim()) {
                    showFieldError('password', 'Password is required');
                    isValid = false;
                } else if (password.length < 8) {
                    showFieldError('password', 'Password must be at least 8 characters long');
                    isValid = false;
                }

                return isValid;
            }

            // Login function
            async function performLogin(email, password) {
                try {
                    // Submit to front-end server which will handle the backend call and cookie
                    const response = await fetch('/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: new URLSearchParams({ email, password }),
                        redirect: 'follow'
                    });

                    if (response.ok) {
                        // Show success message
                        hideMessages();
                        successMessage.classList.remove('hidden');
                        
                        // Redirect to job roles page after a short delay
                        setTimeout(() => {
                            window.location.href = '/job-roles';
                        }, 1000);
                    } else {
                        // Parse error from server
                        const errorData = await response.json();
                        throw new Error(errorData.error || 'Login failed');
                    }
                } catch (error) {
                    console.error('Login error:', error);
                    showError(error.message || 'Invalid email or password. Please try again.');
                }
            }

            // Form submit handler
            loginForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const email = document.getElementById('email').value;
                const password = document.getElementById('password').value;
                
                if (!validateForm(email, password)) {
                    return;
                }

                // Show loading state
                loginButton.disabled = true;
                loginForm.classList.add('hidden');
                loadingState.classList.remove('hidden');

                try {
                    await performLogin(email, password);
                } finally {
                    // Hide loading state
                    loginButton.disabled = false;
                    loginForm.classList.remove('hidden');
                    loadingState.classList.add('hidden');
                }
            });
        });
    </script>
{% endblock %}